{
  "extends": "tsconfig/react-library.json",
  "include": [
    "."
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": [
      "node"
    ]
  }
}
